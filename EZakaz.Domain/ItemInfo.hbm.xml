<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="EZakaz.Domain"
                   assembly="EZakaz.Domain">

    <class name="ItemInfo" table="item_info">

        <id name="ProductId">
            <generator class="assigned" />
        </id>

        <property name="Image" not-null="false" length="64"/>
        <property name="SmallImage" not-null="false" length="64"/>
        <property name="Description" not-null="false" length="5000"/>
        
    </class>

</hibernate-mapping>